/**index.wxss**/

.container {
  padding: 0;
  text-align: left;
  display: block;
}

.ssr-title, .sr-title {
  background-color: #f0f7ff;
  padding: 8rpx 20rpx;
  font-size: 18px;
}

.role-container {
  display: flex;
  align-content: center;
  padding: 8rpx 20rpx;
}

.role-container image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.role-name {
  line-height: 120rpx;
  margin-left: 20rpx;
}

.yyy-container {
  position: absolute;
  top: 370rpx;
  z-index: 10;
}

.yyy-container::after {
  content: '';
  display: block;
  clear: both;
}

.yyy-container > view {
  float: left;
}

.left-block {
  width: 375rpx;
  height: 375rpx;
  background-color: #c00;
}

.animation-container {
  width: 375rpx;
  height: 375rpx;
  background-color: #00c;
  position: relative;
  /* overflow: hidden; */
}

image {
  width: 100%;
  height: 100%;
}

.hahaha {
  position: absolute;
  width: 100%;
  height: 370rpx;
  z-index: 20;
  background-color: #fff;
}

.hidden-view {
  position: absolute;
  width: 100%;
  height: 300rpx;
  z-index: 20;
  top: 745rpx;
  left: 0;
  background-color: #fff;
}

.animation-container > image {
  position: absolute;
}

.animation-container > .image1 {
  width: 200%;
  height: 200%;
  top: -50%;
  left: 0;
  z-index: 11;
}

.animation-container > .image2 {
  width: 170%;
  height: 170%;
  top: -35%;
  left: 15%;
  z-index: 12;
}
